# Copy this file to `.env` and fill values for local development
# DATABASE_URL must be set for Prisma to connect to your database.

HOST=0.0.0.0
PORT=5000
NODE_ENV=development

# Example Postgres URL (replace username/password/port/dbname as needed)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/smartexpense?schema=public

# If you want a quick SQLite dev DB (not recommended for production), you can use:
# DATABASE_URL=file:./dev.db

# JWT secret used to sign tokens
JWT_SECRET=your_jwt_secret_here
